<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h1 class="h3 mb-0">🐾 Update a Pet</h1>
        </div>
        
        <div class="card-body">
          <%= simple_form_for @pet, html: { class: 'needs-validation' } do |f| %>
            <div class="mb-3">
              <%= f.input :name, label: "Pet Name", input_html: { class: 'form-control' } %>
            </div>

            <div class="mb-3">
              <%= f.input :species, collection: Pet::SPECIES, label: "Species", input_html: { class: 'form-control' } %>
            </div>

            <div class="mb-3">
              <%= f.input :image_url, label: "Image URL", input_html: { class: 'form-control' } %>
            </div>

            <div class="mb-3">
              <%= f.input :found_on, as: :date, label: "Found On", input_html: { class: 'form-control' } %>
            </div>

            <div class="d-grid">
              <%= f.button :submit, "Submit Report", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
